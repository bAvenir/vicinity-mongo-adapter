{
  "name": "bAvenirAdapter",
  "version": "2.0.1",
  "description": "bAvenir generic adapter to VICINITY",
  "main": "index.js",
  "scripts": {
    "start": "NODE_PATH=. node index.js",
    "dev": "nodemon --ignore '**/*.json' index.js",
    "test": "jest --coverage",
    "analyze": "node sonar-scanner.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bAvenir/vicinity-generic-adapter.git"
  },
  "author": "Jorge Almela",
  "license": "MIT",
  "dependencies": {
    "bavenir-agent": "^1.1.6",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "mongodb": "^3.5.9",
    "path": "^0.12.7",
    "stoppable": "^1.1.0",
    "swagger-ui-express": "^4.1.4"
  },
  "devDependencies": {
    "jest": "^25.2.4",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^2.0.2",
    "sonarqube-scanner": "^2.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/_configuration/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/_configuration/",
      "/_test/"
    ]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
